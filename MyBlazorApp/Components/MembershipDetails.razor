@using MyBlazorApp.Models

@if (Membership != null)
{
    <div class="membership-details-wrapper">
        <!-- ÜYELİK KARTI (beyaz olan kısım) -->
        <div class="card shadow membership-card">
            <div class="card-header text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="d-flex align-items-center">
                    <i class="bi bi-star-fill me-2" style="font-size: 1.5rem;"></i>
                    <h4 class="mb-0">@Membership.Name</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="text-center  p-3" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); border-radius: 12px;">
                    <div class="membership-price">@Membership.Price.ToString("C")</div>
                    <p class="text-muted mb-0">
                        <i class="bi bi-calendar-check me-1"></i>@Membership.DurationDays gün geçerli
                    </p>
                </div>
                <div>
                    <h5 class="mb-3">
                        <i class="bi bi-list-check me-2 text-primary"></i>Plan Özellikleri
                    </h5>
                    <ul class="feature-list">
                        @foreach (var feature in Membership.Features)
                        {
                            <li class="membership-feature">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>@feature
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- BEYAZ KARTIN DIŞINDA, ALTA OTURAN KREDİ KARTI GÖRSELİ -->
        <div class="membership-extra-visual-outer">
            <img src="img/cvv.png" alt="Kart Görseli" />
        </div>
    </div>
}


@code {
    [Parameter]
    public Membership? Membership { get; set; }
}


